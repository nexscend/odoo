<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="sale_order_line_wizard_view_form" model="ir.ui.view">
            <field name="name">Add Warehouse Product Quantity</field>
            <field name="model">sale.order.line.wizard</field>
            <field name="arch" type="xml">
                <form string="Update Product Quantity">
                            <group>
                                <group>
                                    <field name="product_id" />
                                    <field name="order_line_id" />
                                </group>
                                <group>
                                    <field name="qty_delivered" string="Quantity"/>
                                </group>
                            </group>
                            <field name="product_warehouse_ids"  widget="one2many" nolabel="1"  context="{'default_order_line_id': order_line_id}">
                                <tree editable="bottom" >
                                    <field name="order_line_id" readonly="1"/>
                                    <field name="warehouse_id" string="Warehouse" context="{'only_product_related_warehouse_show': order_line_id}"/>
                                    <field name="available_quantity" readonly="1"/>
                                    <field name="qty_delivered" string="Quantity" sum="Total Quantity"/>
                                </tree>
                            </field>
                        <footer>
                            <button name="change_product_qty" string="Apply" type="object" class="btn-primary" data-hotkey="q"/>
                            <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="x"/>
                        </footer>
                </form>
            </field>
        </record>

        <record id="action_sale_order_line_wizard" model="ir.actions.act_window">
            <field name="name">Add Warehouse Product Quantity</field>
            <field name="res_model">sale.order.line.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
