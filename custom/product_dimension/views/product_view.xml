<?xml version="1.0" ?>
<odoo>
    <record model="ir.ui.view" id="product_normal_form_view">
        <field name="name">product_normal_form_view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='inventory']" position="inside">
                <group name="dimensions" string="Dimensions">
                    <group>
                        <!-- <field name="dimensional_uom_id" /> -->
                        <field name="product_length" string="Length" />
                    </group>
                    <group>
                        <field name="product_height" string="Height" />
                        <field name="product_width" string="Width" />
                    </group>
                </group>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="product_template_only_form_view">
        <field name="name">product_template_form_view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='inventory']" position="inside">
                <group
                    string="Dimensions"
                    name="dimensions"
                >
                    <group>
                        <!-- <field name="dimensional_uom_id" /> -->
                        <field name="product_length" string="Length" />
                    </group>
                    <group>
                        <field name="product_height" string="Height" />
                        <field name="product_width" string="Width" />
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="product_category_view_form" model="ir.ui.view">
        <field name="name">product.dimension.form</field>
        <field name="model">product.dimension</field>
        <field name="arch" type="xml">
            <form string="Raw Material Price" create="1" edit="1">
                <sheet>
                    <group>
                        <group>
                            <field name="product_temp_id" required="1"/>
                            <field name="name" />
                            <field name="category_id" required="1"/>
                        </group>
                        <group>
                            <field name="product_length"/>
                            <field name="product_height"/>
                            <field name="product_width"/>
                        </group>
                    </group>
                </sheet>
              
            </form>
        </field>
    </record>


    <record id="product_category_raw_material_view_search" model="ir.ui.view">
        <field name="name">product.dimension.view.search</field>
        <field name="model">product.dimension</field>
        <field name="arch" type="xml">
            <search>
                <field name="category_id"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="groupby_category_id" context="{'group_by': 'product_temp_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="product_category_raw_material_view_tree" model="ir.ui.view">
        <field name="name">product.dimensionl.list.view</field>
        <field name="model">product.dimension</field>
        <field name="arch" type="xml">
            <tree  editable="top" >
                <field name="name" required="1" readonly="1"/>
                <field name="product_temp_id" required="1"/>
                <field name="product_length"/>
                            <field name="product_height"/>
                            <field name="product_width"/>
            </tree>
        </field>
    </record>

    <record id="Product_category_dimensionl_action" model="ir.actions.act_window">
        <field name="name">Product Dimension</field>
        <field name="res_model">product.dimension</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_groupby_category_id': True}</field>
        <field name="view_id"></field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
              No data for analysis
            </p>
            <p>
              Manage efficiently your different Product Dimension Price with Odoo.
            </p>
        </field>
    </record>
</odoo>
