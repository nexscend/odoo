<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_category_form" model="ir.ui.view">
        <field name="name">product.category.form.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='first']" position="after">
                <group name="last" col="2">
                    <field name="parent_id" invisible="1"/>
                    <!-- <field name="raw_material_id" class="oe_inline" required="True"  invisible="parent_id != 0"/> -->
                    <field name="raw_material_id" class="oe_inline" required="True"  invisible="parent_id == 0"  options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" widget="selection"/>
                    <field name="price" class="oe_inline" readonly="1"  invisible="parent_id == 0"/>
                </group>
            </xpath>
        </field>
    </record>
    <record id="product_category_raw_material_search" model="ir.ui.view">
        <field name="name">product.category.raw.material.view.search</field>
        <field name="model">product.category.raw.material</field>
        <field name="arch" type="xml">
            <search string="Raw Material">
                <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="price" filter_domain="[('price', 'ilike', self)]"/>
            </search>
        </field>
    </record>

    <record id="product_category_raw_material_view_form" model="ir.ui.view">
        <field name="name">product.category.raw.material.form</field>
        <field name="model">product.category.raw.material</field>
        <field name="arch" type="xml">
            <form string="Raw Material Price" create="1" edit="1">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="True"/>
                        </group>
                        <group>
                            <field name="price" required="True"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="Product_category_raw_material_action" model="ir.actions.act_window">
        <field name="name">Raw Material</field>
        <field name="res_model">product.category.raw.material</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id"></field>
        <field name="search_view_id" ref="nex_product_cate_raw_material.product_category_raw_material_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
              No data for analysis
            </p>
            <p>
              Manage efficiently your different Raw Material Price with Odoo.
            </p>
        </field>
    </record>




</odoo>
